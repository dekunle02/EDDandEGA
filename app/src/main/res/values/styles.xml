<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.TabLayoutOverlay" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabIndicatorHeight">8dp</item>
    </style>


    <style name="AppTheme.ResultTextView">
        <item name="android:minLines">3</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.FluidTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="AppTheme.Cards">
        <item name="android:padding">32dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

</resources>
